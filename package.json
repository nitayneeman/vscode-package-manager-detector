{
  "name": "package-manager-detector",
  "displayName": "Package Manager Detector",
  "description": "Detects and displays which package manager (npm, yarn, pnpm, bun) is used in your project",
  "version": "0.4.2",
  "publisher": "nitayneeman",
  "repository": {
    "type": "git",
    "url": "https://github.com/nitayn/package-manager-detector.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "packageManagerDetector.openPackageJson",
        "title": "Open package.json"
      }
    ],
    "colors": [
      {
        "id": "packageManagerDetector.npm",
        "description": "Color for npm in status bar",
        "defaults": {
          "dark": "#CB3837",
          "light": "#CB3837",
          "highContrast": "#CB3837"
        }
      },
      {
        "id": "packageManagerDetector.yarn",
        "description": "Color for yarn in status bar",
        "defaults": {
          "dark": "#2C8EBB",
          "light": "#2C8EBB",
          "highContrast": "#2C8EBB"
        }
      },
      {
        "id": "packageManagerDetector.pnpm",
        "description": "Color for pnpm in status bar",
        "defaults": {
          "dark": "#F9AD00",
          "light": "#F9AD00",
          "highContrast": "#F9AD00"
        }
      },
      {
        "id": "packageManagerDetector.bun",
        "description": "Color for bun in status bar",
        "defaults": {
          "dark": "#FBF0DF",
          "light": "#F9F1E1",
          "highContrast": "#FBF0DF"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:tests": "tsc -p ./test/tsconfig.json",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && npm run compile:tests && node ./out/test/test/runTest.js",
    "package": "vsce package",
    "install-local": "code --install-extension $(ls package-manager-detector-*.vsix | tail -1)"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0"
  }
}
